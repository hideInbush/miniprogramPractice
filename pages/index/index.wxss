/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  background-color: #F1F5F9;
}
.greeting{
  color: #666;
  font-size: 34rpx;
  margin: 0 50rpx;
  margin-top: 30rpx;
}
.name{
  font-size: 40rpx;
  margin: 0 50rpx;
  font-weight: bold;
}
.swiperWrapper{
  width: 100%;
  height: 540rpx;
  margin-top: 60rpx;
}

.btn-add-fixed{
  position: fixed;
  display: inline-block;
  right: 60rpx;
  bottom: 60rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  font-size: 50rpx;
  background-color: #850AFF;
}

.partners{
  margin-top: 60rpx;
}
.partners .title{
  color: #999;
  font-size: 34rpx;
  margin-left: 50rpx;
}
.partners .avatarWrapper{
  margin-top: 20rpx;
  display: block;
}
.partners .avatarWrapper .avatar{
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #F1F5F9;
  margin-left: 30rpx;
  box-sizing: border-box;
}
.partners .avatarWrapper .avatar:first-child{
  margin-left: 50rpx;
  border: 1px solid #EAB843;
}
.partners .avatarWrapper .avatar:nth-child(2){
  border: 1px solid #339C6A;
}
.partners .avatarWrapper .avatar:nth-child(3){
  border: 1px solid #528BE3;
}

.partners .btn-add{
  border: 1px dashed #999;
  color: #999;
  line-height: 80rpx;
  font-size: 40rpx;
  background-color: #F1F5F9!important;
}